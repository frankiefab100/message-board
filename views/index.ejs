<html>

<head>
    <title>
        <%= title %>
    </title>
</head>

<body>
    <nav>
        <h1>Messages</h1>
        <ul>
            <% for (let msg of messages) { %>
                <li>
                    <p>
                        <%= msg.text %> - <%= msg.user %>
                    </p>
                    <span>
                        <%= msg.added.toLocaleString() %>
                    </span>
                </li>
                <% } %>
        </ul>
        <a href="/new">Add a new message</a>
    </nav>
</body>

</html>